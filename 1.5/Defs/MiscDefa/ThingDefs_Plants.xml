      <MarketValue>600</MarketValue>
      <WorkToMake>750</WorkToMake>
    </statBases>
    <graphicData>
      <texPath>Items/Resource/Plant/BRF_CrimsonAgarilux_Seed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.6, 0.6)</drawSize>
    </graphicData>
