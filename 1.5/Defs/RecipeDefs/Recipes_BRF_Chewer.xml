<!--处理尸体-->
  <RecipeDef>
    <defName>BRF_ChewCorpse</defName>
    <label>feed corpse to chewer</label>
    <description>Feed corpse to chewer</description>
    <jobString>Feed.</jobString>
    <workAmount>500</workAmount>
    <recipeUsers>
      <li>BRF_Chewer</li>
    </recipeUsers>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>BRF_Chewer_Crafting</soundWorking>
    <autoStripCorpses>true</autoStripCorpses>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>CorpsesHumanlike</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>CorpsesHumanlike</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <thingDefs>
        <li>Corpse_Human</li>
      </thingDefs>
      <specialFiltersToAllow>
        <li>AllowCorpsesColonist</li>
        <li MayRequire="Ludeon.RimWorld.Ideology">AllowCorpsesSlave</li>
        <li>AllowCorpsesStranger</li>
      </specialFiltersToAllow>
    </defaultIngredientFilter>
    <products>
      <BRF_BoneFragment>25</BRF_BoneFragment>
      <BRF_NutritionalPaste>1</BRF_NutritionalPaste>
    </products>
    <displayPriority>500</displayPriority>
    <researchPrerequisite>BRF_LivingMechanismResearch</researchPrerequisite>
  </RecipeDef>

