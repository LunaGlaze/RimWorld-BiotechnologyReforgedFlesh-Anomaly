    <size>(2,2)</size>
    <graphicData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
        <scratches>
          <li>Damage/FleshScratch1</li>
          <li>Damage/FleshScratch2</li>
          <li>Damage/FleshScratch3</li>
